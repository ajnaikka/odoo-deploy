pipeline {
    agent any
 
    stages {
        stage('branch test') {
            steps {
                script {
                    echo "Current branch: ${BRANCH_NAME}"
                    if (branch == 'refs/remotes/origin/production'){
                           sh 'uname'
                    }
                    else {
                        echo "branch is not production"
                    }
                }
            }
        }
    }
}



