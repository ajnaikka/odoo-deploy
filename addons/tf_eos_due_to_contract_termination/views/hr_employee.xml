<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_employee_termination_inherit" model="ir.ui.view">
        <field name="name">hr.employee.termination.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='end_of_service']//group/group[2]" position="inside">

                <button string="Termination Form" type="object" class="btn btn-secondary ms-4 mt-3"
                        name="action_emp_termination_form" invisible="end_of_service_type != 'termination' or emp_term_ids"
                        />

                 </xpath>
            <xpath expr="//page[@name='end_of_service']//form" position="inside">

                    <field name="emp_term_ids" invisible="end_of_service_type != 'termination'">
                        <tree delete="1" create="0">
                            <field name="related_emp_con_id"/>
                            <field name="email_from"/>
                            <field name="email_to"/>
                            <field name="inv_letter" widget="binary"/>
                            <field name="state"/>

                        </tree>
                    </field>



            </xpath>

            <xpath expr="//field[@name='birthday']" position="after">
                <field name="age"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_employee_search_inherit" model="ir.ui.view">
        <field name="name">hr.employee.search.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <search>
                <filter string="Age >= 60" name="age" domain="[('age', '>=', 60)]"/>
            </search>
        </field>
    </record>


</odoo>
