<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_termination_email" model="mail.template">
            <field name="name">Employee Termination Template</field>
            <field name="model_id" ref="tf_eos_due_to_contract_termination.model_employee_termination"/>
            <field name="subject">Termination form for {{(object.related_emp_id.name)}}</field>
            <field name="email_from">{{object.email_from}}</field>
            <field name="email_to">{{object.email_to.email}}</field>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <br/><br/><br/><br/><br/><br/><br/>
                <div style="margin: 5px 0px 5px 0px;">
                    <a t-att-href="object.get_url()">
                    Link of record</a>
                </div>
            </field>
        </record>

    </data>
</odoo>
