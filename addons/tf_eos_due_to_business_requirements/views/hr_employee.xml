<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_termination_business_requirement_inherit" model="ir.ui.view">
        <field name="name">hr.employee.termination.business.requirement.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='end_of_service']//group/group[2]" position="inside">

                 <button string="Termination Due to condition"
                            type="object"
                            class="btn btn-secondary ms-4 mt-3"
                            name="action_business_requirement"
                            invisible="end_of_service_type != 'condition' or emp_bus_con_ids"

                 />
            </xpath>
            <xpath expr="//page[@name='end_of_service']//form" position="inside">
                 <field name="emp_bus_con_ids" invisible="end_of_service_type != 'condition'">
                            <tree delete="0" create="0">
                                <field name="related_emp_bus_id"/>
                                <field name="email_from"/>
                                <field name="email_to"/>
                                <field name="inv_letter" widget="binary"/>
                                <field name="state"/>
                            </tree>
                        </field>
            </xpath>
        </field>
    </record>
</odoo>
