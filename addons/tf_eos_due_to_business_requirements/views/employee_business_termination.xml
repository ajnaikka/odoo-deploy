<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_termination_of_business_requirement_form" model="ir.ui.view">
            <field name="name">employee.termination.business.requirement.form</field>
            <field name="model">employee.business.requirement</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_mail_dep_manager" type="object" class="oe_highlight" string="Send Mail"
                                invisible="state != 'req'" groups="tf_approval_user_groups.department_manager"/>
                        <field name="state" widget="statusbar"/>

                        <button name="action_send_mail_hr_manager" type="object" class="oe_highlight" string="Send Mail"
                                invisible="state != 'app_1'"
                                groups="tf_approval_user_groups.hr_id"/>

                        <button name="action_send_mail_ceo_manager" type="object" class="oe_highlight" string="Approve"
                                invisible="state != 'app_1'"
                                groups="tf_approval_user_groups.chief_executive_id"/>

                        <button name="action_send_mail_hr_to_emp" type="object" class="oe_highlight" string="Send Mail"
                                invisible="state != 'app_2'"
                                groups="tf_approval_user_groups.hr_id"/>

                        <button name="action_done" type="object" class="oe_highlight" string="Terminate"
                                invisible="state != 'app_3'" groups="tf_approval_user_groups.hr_id"/>

                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="related_emp_bus_id" invisible="0"/>
                                <field name="email_from"/>
                                <field name="email_to" options="{'no_create': True,'no_create_edit': True, 'no_open': True}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="inv_letter" filename="file_name"/>
                                <field name="user_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="view_employee_termination_of_business_requirement_tree" model="ir.ui.view">
            <field name="name">employee.termination.business.requirement.tree</field>
            <field name="model">employee.business.requirement</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="related_emp_bus_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_termination_of_business_requirement" model="ir.actions.act_window">
            <field name="name">Employee Termination Due To Business Requirment</field>
            <field name="res_model">employee.business.requirement</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
