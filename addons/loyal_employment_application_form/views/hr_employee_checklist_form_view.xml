<odoo>
    <data>
        <record id="view_employee_checklist_question_tree" model="ir.ui.view">
            <field name="name">view.employee.checklist.question.tree</field>
            <field name="model">hr.employee.checklist.questions</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_employee_checklist_question_view" model="ir.actions.act_window">
            <field name="name">Checklist Questions</field>
            <field name="res_model">hr.employee.checklist.questions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
                id="menu_checklist_questions"
                name="Checklist Questions"
                action="action_employee_checklist_question_view"
                parent="hr.menu_config_plan"
                groups="hr.group_hr_manager"
                sequence="100"/>

    </data>
</odoo>