<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="arrival_service_type" model="airport.service.type">
            <field name="name">Arrival Service</field>
            <field name="is_arrival">True</field>
            <field name="is_departure">False</field>
            <field name="is_transit">False</field>
        </record>

        <record id="departure_service_type" model="airport.service.type">
            <field name="name">Departure Service</field>
            <field name="is_arrival">False</field>
            <field name="is_departure">True</field>
            <field name="is_transit">False</field>
        </record>

        <record id="transit_service_type" model="airport.service.type">
            <field name="name">Transit Service</field>
            <field name="is_arrival">False</field>
            <field name="is_departure">False</field>
            <field name="is_transit">True</field>
        </record>


        <record id="meet_greet_services" model="uaa.services">
            <field name="name">Meet &amp; Greet</field>
            <field name="url">/request-meet-greet</field>
        </record>

        <record id="airport_hotel_services" model="uaa.services">
            <field name="name">Airport Hotel</field>
            <field name="url">/airport-hotel-form</field>
        </record>
        <record id="airport_lounge_services" model="uaa.services">
            <field name="name">Airport Lounge</field>
            <field name="url">/airport-lounge-form</field>
        </record>

        <record id="airport_transfer_services" model="uaa.services">
            <field name="name">Airport Transfer</field>
            <field name="url">/airport-transfer-form</field>
        </record>
    </data>
</odoo>