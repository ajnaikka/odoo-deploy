<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="sequence_airport_booking" model="ir.sequence">
            <field name="name">Airport Booking</field>
            <field name="code">airport.bookings</field>
            <field name="active">TRUE</field>
            <field name="prefix">BU</field>
            <field name="padding">5</field>
        </record>
        <record id="email_template_booking_confirmation" model="mail.template">
            <field name="name">Booking Confirmation</field>
            <field name="model_id" ref="sr_uaa_main.model_airport_enquiry"/>
            <field name="subject">Booking Confirmation | Universal Airport Assistance</field>
            <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted) }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>
        <record id="email_template_journey_reminder" model="mail.template">
            <field name="name">Journey Reminder</field>
            <field name="model_id" ref="sr_uaa_main.model_airport_enquiry"/>
            <field name="subject">Journey Reminder | Universal Airport Assistance</field>
            <field name="email_from">${(user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>
        <record id="email_template_passport_expiry_notification" model="mail.template">
            <field name="name">Passport Expired</field>
            <field name="model_id" ref="sr_uaa_main.model_res_partner"/>
            <field name="subject">Passport Expired</field>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>
        <record id="email_template_thankyou_mail" model="mail.template">
            <field name="name">Thank You</field>
            <field name="model_id" ref="sr_uaa_main.model_airport_enquiry"/>
            <field name="subject">Thank You for Your Enquiry | Universal Airport Assistance</field>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>
        <record id="email_template_enquiry_to_company" model="mail.template">
            <field name="name">Enquiry</field>
            <field name="model_id" ref="sr_uaa_main.model_airport_enquiry"/>
<!--            <field name="subject">New Enquiry | Universal Airport Assistance</field>-->
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>

        <record id="custom_send_mail_template" model="mail.template">
            <field name="name">Send Mail</field>
            <field name="model_id" ref="sr_uaa_main.model_airport_enquiry"/>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>

        <record id="email_template_payment_receipt" model="mail.template">
            <field name="name">Payment Receipt</field>
            <field name="model_id" ref="sr_uaa_main.model_sale_order"/>
            <field name="subject">Payment Receipt</field>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
            </field>
        </record>

        <record id="email_template_payment_receipt_new" model="mail.template">
            <field name="name">Payment receipt mail</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="subject">${object.company_id.name} Payment Receipt (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="email_from">${(user.email_formatted) | safe}</field>
            <field name="body_html" type="xml">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.traveler_name or object.partner_id.name},
                        <br/>
                        <br/>
                        Thank you for the payment. Please find the attached payment receipt for your reference.
                        <br/>
                        <br/>
                        Thanks &amp; Regards,
                        % if user.partner_id:
                        <br/>
                        ${user.partner_id.name | safe}
                        % endif
                    </p>
                </div>
            </field>
            <field name="report_template" ref="sr_uaa_main.action_report_payment_receipt_uaa"/>
            <field name="report_name">${('Payment Receipt').replace('/','-')}</field>


            <!--            <field name="lang">${object.create_uid.lang}</field>-->
        </record>

    </data>
</odoo>