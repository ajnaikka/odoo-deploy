                                               t-attf-class="form-control #{error.get('traveler_name') and 'is-invalid' or ''}"
                                               name="traveler_name" id="traveler_name"
                                               t-att-value="traveler_name or ''"/>
                                        <span t-if="error.get('traveler_name')" t-esc="error.get('traveler_name')"
                                              id="err_name" class="err_msg"/>
                                    </div>
                                    <div class="form-group form-group-50">
                                        <label>Email
                                            <span class="required-field"></span>
                                        </label>
                                        <input type="text"
                                               t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}"
                                               name="email" id="email"
                                               t-att-value="email or ''"
                                        />
                                        <span t-if="error.get('email')" t-esc="error.get('email')"
                                              id="err_email" class="err_msg"/>
                                    </div>

                                    <div class="clearfix"/>
                                    <div class="form-group contact_number">
                                        <label>Contact Number
                                            <span class="required-field"></span>
                                        </label>
                                        <div class="input-group contact_number">

                                            <select t-attf-class="form-control input-group-addon #{error.get('country_id') and 'is-invalid' or ''}"
                                                    name="country_id"
                                                    id="country_code">
                                                <option value="">Select Country Code</option>

                                                <t t-foreach="country" t-as="line">
                                                    <option t-att-value="line.id"
                                                            t-att-selected="country_id == line.id">
                                                        <span>
                                                            <span t-esc="line.name"/>(+<span t-esc="line.phone_code"/>)
                                                        </span>
                                                    </option>
                                                </t>
                                            </select>
                                            <span t-if="error.get('country_id')" t-esc="error.get('country_id')"
                                                  id="err_code" class="err_msg err_select"/>
                                            <input type="text" id="mobile"
                                                   t-attf-class="form-control #{error.get('contact_number') and 'is-invalid' or ''}"
                                                   name="contact_number"
                                                   placeholder="Contact Number" t-att-value="contact_number"/>
                                            <!--                                            <span t-if="error.get('contact_number')" t-esc="error.get('contact_number')"-->
                                            <!--                                                  id="err_mobile" class="err_msg err_select"/>-->
                                        </div>
                                    </div>
                                    <div class="clearfix"/>
                                    <div class="form-group">
                                        <label>Service Type
                                            <span class="required-field"></span>
                                        </label>
                                        <select id="service_types"
                                                name="service_types"
                                                t-attf-class="form_select form-control select_service service_types #{error.get('service_types') and 'is-invalid' or ''}">
                                             <option></option>
                                            <t t-foreach="service_type_ids" t-as="type_id"
                                            >
                                                <option t-att-value="type_id.id"
                                                        t-att-data-is-arrival="type_id.is_arrival"
                                                        t-att-data-is-departure="type_id.is_departure"
                                                        t-att-data-is-transit="type_id.is_transit"
                                                        t-att-selected="type_id.id == service_types">
                                                    <span t-esc="type_id.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <!--                                        <select t-attf-class="form-control select_service service_types #{error.get('service_types') and 'is-invalid' or ''}"-->
                                        <!--                                                id="service_types"-->
                                        <!--                                                name="service_types">-->
                                        <!--                                            <option value="arrival" t-att-selected="service_typess == 'arrival'">Arrival-->
                                        <!--                                                Service-->
                                        <!--                                            </option>-->
                                        <!--                                            <option value="departure" t-att-selected="service_typess == 'departure'">-->
                                        <!--                                                Departure Service-->
                                        <!--                                            </option>-->
                                        <!--                                            <option value="transit" t-att-selected="service_typess == 'transit'">Transit-->
                                        <!--                                                Service-->
                                        <!--                                            </option>-->
                                        <!--                                        </select>-->
                                        <span t-if="error.get('service_types')" t-esc="error.get('service_types')"
                                              id="err_service_types" class="err_msg"/>
