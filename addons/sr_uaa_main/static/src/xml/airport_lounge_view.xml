                                        <!--                                data-toggle="datetimepicker" data-date-format="YYYY-MM-DD" />-->
                                        <!--                                        t-attf-data-target="#datetimepicker_#{ol.id}"-->
                                        <span t-if="error.get('arrival_time')" t-esc="error.get('arrival_time')"
                                              id="err_arrival_time" class="err_msg"/>

                                    </div>
                                    <div class="clearfix"/>
                                    <div t-att-class="'form-group' if service_types_name=='departure' or service_types_name=='transit' else 'form-group tab_hide'"
                                         id="departure_flight_div">
                                        <label>Departure Flight Number
                                            <span class="required-field"></span>
                                        </label>
                                        <input type="text"
                                               t-attf-class="form-control #{error.get('departure_flight_number') and 'is-invalid' or ''}"
                                               name="departure_flight_number"
                                               id="departure_flight_number" placeholder="Eg : EK220"
                                               t-att-value="departure_flight_number"
                                        ></input>
                                        <span t-if="error.get('departure_flight_number')"
                                              t-esc="error.get('departure_flight_number')"
                                              id="err_departure_flight_number" class="err_msg"/>
                                    </div>
                                    <div class="clearfix"/>
                                    <div t-att-class="'form-group form-group-50' if service_types_name=='departure' or service_types_name=='transit' else 'form-group form-group-50 tab_hide'"
                                         id="departure_date_div">
                                        <label>Departure Date
                                            <span class="required-field"></span>
                                        </label>
                                        <input type="date"
                                               t-attf-class="form-control #{error.get('departure_date') and 'is-invalid' or ''}"
                                               name="departure_date"
                                               id="departure_date"
                                               t-att-value="departure_date or ''"
                                        ></input>
                                        <span t-if="error.get('departure_date')" t-esc="error.get('departure_date')"
                                              id="err_departure_date" class="err_msg err_select"/>
                                    </div>
                                    <div t-att-class="'form-group form-group-50' if service_types_name=='departure' or service_types_name=='transit' else 'form-group form-group-50 tab_hide'"
                                         id="departure_time_div">
                                        <label style="width:100%;">Departure Time
                                            <span class="required-field"></span>
                                        </label>
                                        <!--                                        <input type="time"-->
                                        <!--                                               t-attf-class="form-control #{error.get('departure_time') and 'is-invalid' or ''}"-->
                                        <!--                                               name="departure_time" t-att-value="departure_time"-->
                                        <!--                                               onkeydown="return false;"-->
                                        <!--                                        ></input>-->
                                        <div class="row">
                                            <div class="col-md-6">

                                                <select id="departure_hours_id"
                                                        name="departure_hours_id"
                                                        t-attf-class="form_select form-control  #{error.get('departure_time') and 'is-invalid' or ''}">
                                                    <option value="">HH</option>
                                                    <t t-foreach="hours" t-as="hour">
                                                        <option t-att-value="hour"
                                                                t-att-selected="hour == departure_hours_id">
                                                            <span t-esc="hour"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <select id="departure_minutes_id"
                                                        name="departure_minutes_id"
                                                        t-attf-class="form_select form-control  #{error.get('departure_time') and 'is-invalid' or ''}">
                                                    <option value="">MM</option>
                                                    <t t-foreach="minutes" t-as="minute"
                                                    >
                                                        <option t-att-value="minute"
                                                                t-att-selected="minute == departure_minutes_id">
                                                            <span t-esc="minute"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <span t-if="error.get('departure_time')" t-esc="error.get('departure_time')"
                                              id="err_departure_time" class="err_msg"/>
                                    </div>
                                    <div class="clearfix"/>
                                    <div class="form-group form-group-50">
                                        <label>No of Hours of Stay
                                            <span class="required-field"></span>
                                        </label>
                                        <input type="number" min="1" max="100" step="1"
                                               t-attf-class="form-control #{error.get('hours_count') and 'is-invalid' or ''}"
                                               name="hours_count" id="hours_count"
                                               t-att-value="hours_count or ''"
                                        ></input>
                                        <span t-if="error.get('hours_count')" t-esc="error.get('hours_count')"
                                              id="err_departure_time" class="err_msg"
                                        />
                                    </div>


                                    <div class="form-group form-group-50">
                                        <label>No of Travellers
                                            <span class="required-field"></span>
                                        </label>
                                        <input type="number" min="1" max="100" step="1"
                                               t-attf-class="form-control #{error.get('travelers_count') and 'is-invalid' or ''}"
                                               name="travelers_count" id="travelers_count"
                                               t-att-value="travelers_count or ''"
                                        ></input>
                                        <span t-if="error.get('travelers_count')" t-esc="error.get('travelers_count')"
                                              id="err_children" class="err_msg"/>
                                    </div>

                                    <div class="clearfix"/>
                                    <div class="form-group">
                                        <label>Message</label>
                                        <textarea type="text"
                                                  t-attf-class="form-control #{error.get('customer_message') and 'is-invalid' or ''}"
                                                  name="customer_message" id="customer_message"
                                                  rows="3">
                                            <t t-esc="customer_message"/>
                                        </textarea>
                                        <span t-if="error.get('customer_message')" t-esc="error.get('customer_message')"
                                              id="err_children" class="err_msg"/>
                                    </div>
                                    <div class="clearfix"/>
                                    <div id="captcha" class="imageContainer">
                                        <div class="form-group">
                                            <!--  specify your site  in data-sitekey attribute -->
                                            <div class="g-recaptcha"
                                                 data-sitekey="6Le5nMQUAAAAALpK02mtPPGnpjVlnq6orhz4Zj0u"
                                                 data-callback="verifyRecaptchaCallback"
                                                 data-expired-callback="expiredRecaptchaCallback"/>
                                            <input type="hidden" class="form-control d-none" data-recaptcha="true"/>
                                            <div class="help-block with-errors" id="err" style="color: red"/>
                                        </div>
                                    </div>
                                    <div class="clearfix"/>
                                    <div class="submit_">
                                        <button type="submit"
                                                class="pull-right submit button btn_all btn btn-primary frm-sbt wait">
                                            Book Now
                                        </button>
                                    </div>
                                </div>
