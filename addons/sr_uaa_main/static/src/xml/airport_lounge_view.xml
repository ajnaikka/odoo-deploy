                        <t t-else="">
                            <form action="/airport-lounge-form"
                                  id="airport_lounge_request_form" method="post"
                                  accept-charset="utf-8"
                            >
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" id="timezone" name="timezone"></input>
                                <div id="div_airport_h_page" class="uaa_form_div">
                                    <h1>Personal and Service Details</h1>
                                    <div class="form-group">
                                        <label>Airport
                                            <span class="required-field"></span>
                                        </label>
                                        <select name="airport_id" style="text-align: left;"
                                                t-attf-class="form_select form-control #{error.get('airport_id') and 'is-invalid' or ''}">
                                            <option value="">Select Airport</option>
                                            <t t-foreach="airport_names" t-as="airport"
                                            >
                                                <option t-att-value="airport.id"
                                                        t-att-selected="airport.id == airport_name">
                                                    <span t-esc="airport.name"/>
                                                    <span>(</span>
                                                    <span t-esc="airport.code"/>
                                                    <span>)</span>
                                                    <t t-if="airport.country_id and airport.country_id.name">
                                                        <span>/</span>
                                                        <span t-esc="airport.country_id.name"/>
                                                    </t>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <span t-if="error.get('airport_id')" t-esc="error.get('airport_id')"
                                          id="err_origin_code" class="err_msg"/>
                                    <div class="clearfix"/>
                                    <div class="form-group form-group-50">
                                        <label>Name of the Traveller
                                            <span class="required-field"></span>
                                        </label>
                                        <!--                                <input type="text" class="form-control" name="name" id="name" value=""-->
                                        <!--                                       ></input>-->
