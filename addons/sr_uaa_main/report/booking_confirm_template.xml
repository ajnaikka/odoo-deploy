<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="external_layout_booking_confirmation">
        <!--        Header-->
        <div class="header" t-att-style="report_header_style">
            <div>
                <div class="col-12">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                         style="margin-left: 35%; margin-right: auto;margin-top: 30px;"/>
                </div>
                <div class="not-first-page">
                    <div class="col-12" style="width:100%;text-align: center;background-color:#0eb4df;color:#0eb4df;">
                        <a style="color:#0eb4df;" t-att-href="company.website">
                            <t t-esc="company.website"/>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard" style="font-family: 'Arial,Helvetica,sans-serif' !important;"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        <!--Footer-->
        <div class="footer o_standard_footer" style="font-size:20px;">
            <div>
                <!--                <div width="100%" style="text-align: center;">-->
                <!--                <span>-->
                <!--                        <t t-esc="company.booking_footer_text"/>-->
                <!--                    </span>-->
                <!--                </div>-->
                <div class="col-12" style="width:100%;text-align: center;background-color:#0eb4df;color:white;">

                    <a style="color:white;" t-att-href="company.website">
                        <t t-esc="company.website"/>
                    </a>
                </div>
            </div>
        </div>
    </template>

    <template id="report_booking_confirmation_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="sr_uaa_main.external_layout_booking_confirmation">
            <t t-raw="0"/>
        </t>
    </template>


