    <template id="uaa_external_layout_standard">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div>
                    <h4>
                        <b t-esc="company.name"
                           style="margin-left:30px;margin-top: 40px;text-transform: uppercase !important; display:block;"/>
                    </h4>
                </div>
                <div>
                    <img style="margin-left:200px;max-height:100px;max-width: 230px;" t-if="company.logo"
                         t-att-src="image_data_uri(company.logo)"
                    />
                </div>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <!-- <div class="pt-5">
                This div ensures that the address is not cropped by the header.
                <t t-call="web.address_layout"/>
            </div> -->
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;font-size:13px;">
                <div t-if="report_type == 'pdf'" class="text-muted">
                     This is a computer-generated invoice no signature is required.
                </div>
            </div>
        </div>
    </template>

    <!--    custom layout for  booking conformation-->

    <template id="uaa_external_layout_standard_booking">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div class="col-12">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                         style="margin-left: 35%; margin-right: auto;margin-top: 30px;"/>
                </div>
            </div>
            <!--        </div>-->
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <!-- <div class="pt-5">
                This div ensures that the address is not cropped by the header.
                <t t-call="web.address_layout"/>
            </div> -->
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="row">
                <table width="100%">
                    <tr style="height:25px;">
                        <td width="50%"
                            style="background-color:#ECF0F1;padding-left:13px;line-height: 43px;border-right: 1px solid #ddd;">

                            <div style="font-size:20px;">
                                <div class="">
                                    <div width="100%" style="text-align: center;">
                                        <span>
                                            <t t-esc="o.company_id.booking_footer_text"/>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                </table>
            </div>

            <div class="row">
                <table width="100%">
                    <tr style="height:25px;">
                        <td class="col-12"
                            style="width:100%;text-align: center;background-color:#0eb4df;color:white;">

                            <div style="font-size:20px;">
                                <div class="">

                                    <a style="color:white;" t-att-href="o.company_id.website">
                                        <t t-esc="o.company_id.website"/>
                                    </a>
                                </div>
                            </div>

                        </td>
                    </tr>
                </table>
            </div>

        </div>
    </template>


