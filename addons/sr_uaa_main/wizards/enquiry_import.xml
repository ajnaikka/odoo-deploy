<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sm_enquiry_import_form" model="ir.ui.view">
            <field name="name">sm_enquiry_import_form</field>
            <field name="model">enquiry.import</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4" colspan="4">
                        <field name="file" filename="filename" required="1"/>
                    </group>
                    <footer>
                        <button string="Import Enquiry" name="enquiry_import" type="object" class="oe_highlight"/>
                        <button string="Import Airport And Services" name="airport_import" type="object" class="oe_highlight"/>
                        <button string="Import Service Description" name="airport_service_description" type="object" class="oe_highlight"/>
<!--                        <button string="Import Customers" name="customer_import" type="object" class="oe_highlight"/>-->
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_enquiry_import" model="ir.actions.act_window">
            <field name="name">Import Enquiry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">enquiry.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Import Enquiry"
                  id="menu_enquiry_import"
                  action="action_enquiry_import"
                  groups="sr_uaa_main.view_import_enquiries_menu"
                  sequence="300"/>

    </data>
</odoo>