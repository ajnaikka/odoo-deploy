<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payment_receipt_wizard_form" model="ir.ui.view">
            <field name="name">payment_receipt_wizard_form</field>
            <field name="model">payment.download.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4" colspan="4">
                        <field name="message" readonly="1" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Download"
                                name="action_download_payment_receipt"
                                type="object"
                                class="oe_highlight"/>
                        <button string="Send"
                                name="action_send_payment_receipt"
                                type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payment_receipt_wizard" model="ir.actions.act_window">
            <field name="name">Payment Receipt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.download.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>