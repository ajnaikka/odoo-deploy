<odoo>
    <data>

        <record id="view_airport_service_type_tree" model="ir.ui.view">
            <field name="name">airport.service.type.tree</field>
            <field name="model">airport.service.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="is_arrival" groups="base.group_no_one"/>
                    <field name="is_departure" groups="base.group_no_one"/>
                    <field name="is_transit" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <record id="action_airport_service_type_view" model="ir.actions.act_window">
            <field name="name">Airport Service Type</field>
            <field name="res_model">airport.service.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'create': False}</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_uaa_service_tree" model="ir.ui.view">
            <field name="name">uaa.service.tree</field>
            <field name="model">uaa.services</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="url"/>
                    <field name="service_type_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="view_uaa_service_form" model="ir.ui.view">
            <field name="name">uaa.service.form</field>
            <field name="model">uaa.services</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="url"/>
                        <field name="service_type_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                    </group>

                </form>
            </field>
        </record>

        <record id="action_uaa_services_view" model="ir.actions.act_window">
            <field name="name">UAA Services</field>
            <field name="res_model">uaa.services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
        </record>

    </data>
</odoo>
