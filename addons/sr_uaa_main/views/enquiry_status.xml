<odoo>
    <data>

        <record id="view_enquiry_status_tree" model="ir.ui.view">
            <field name="name">enquiry.status.tree</field>
            <field name="model">enquiry.status</field>
            <field name="arch" type="xml">

                <tree create="0" edit="0">
                    <field name="create_uid" options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_enquiry_status_form" model="ir.ui.view">
            <field name="name">enquiry.status.form</field>
            <field name="model">enquiry.status</field>
            <field name="arch" type="xml">
                <form create="0" edit="0" delete="0" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" string="View Enquiry"
                                    name="get_enquiry" icon="fa-external-link-square">
                            </button>
                        </div>
                        <group col="2">
                            <field name="create_uid"
                                   options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                            <field name="create_date"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_enquiry_status_view" model="ir.actions.act_window">
            <field name="name">Enquiry Comments</field>
            <field name="res_model">enquiry.status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
