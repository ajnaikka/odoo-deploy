<odoo>
    <data>
        <record id="view_service_airport_pricelist_tree" model="ir.ui.view">
            <field name="name">airport.service.line.tree</field>
            <field name="model">airport.service.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="airport_id" readonly="1"/>
                    <field name="service_type_id" context="{'service_type_id': uaa_services_id}" readonly="1"/>
                    <field name="uaa_services_id" readonly="1"/>
<!--                    <field name="services" readonly="1"/>-->
                    <!--                    <field name="service_category_id"/>-->
<!--                    <field name="service_type" readonly="1"/>-->
                    <!--                    <field name="service_id"/>-->
                    <field name="service_category_id"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="view_service_airport_pricelist_form" model="ir.ui.view">
            <field name="name">airport.service.line.form</field>
            <field name="model">airport.service.line</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <group col="4">

                            <field name="airport_id" readonly="1"
                                   options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                            <field name="service_type_id" context="{'service_type_id': uaa_services_id}"
                                   options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                            <field name="uaa_services_id"
                                   options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                            <!--                            <field name="services" readonly="1"/>-->
                            <!--                            <field name="service_type" readonly="1"/>-->
                            <field name="service_category_id"
                                   options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>

                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="description" style="max-width: 850px"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_service_airport_pricelist_view" model="ir.actions.act_window">
            <field name="name">Airport Service Price list</field>
            <field name="res_model">airport.service.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
