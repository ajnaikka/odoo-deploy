<odoo>
    <data>

        <record id="view_service_airport_tree" model="ir.ui.view">
            <field name="name">airport.service.name.tree</field>
            <field name="model">airport.service.name</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="service_charge" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_service_airport_form" model="ir.ui.view">
            <field name="name">airport.service.name.form</field>
            <field name="model">airport.service.name</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="service_charge" invisible="1"/>
                            <field name="show_meet_greet"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_service_airport_view" model="ir.actions.act_window">
            <field name="name">Airport Service</field>
            <field name="res_model">airport.service.name</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
