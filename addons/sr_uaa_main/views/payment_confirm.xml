<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_confirmation" inherit_id="payment.confirm">
        <xpath expr="//div[hasclass('row')]/div[2]" position="replace">
            <a role="button" t-attf-class="btn btn-#{status} float-right" href="/request-meet-greet">
                <i class="fa fa-arrow-circle-right"/>
                Go to Home
            </a>
        </xpath>
        <div class="o_website_payment">
            <h1>Thanks for your payment</h1>
            <p>A payment to UNIVERSAL AIRPORT will appear on your statement.</p>
        </div>
    </template>
</odoo>