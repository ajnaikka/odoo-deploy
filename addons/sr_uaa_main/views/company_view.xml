<odoo>
    <record id="res_company_inherit_booking_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.booking</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Terms &amp; Conditions" name="terms_conditions_info">
                    <group>
                        <field name="terms_conditions" nolabel="1"/>
                    </group>
                </page>
                <page string="Cancellation Policy" name="cancellation_policy_info" >
                    <group>
                        <field name="cancellation_policy" nolabel="1"/>
                    </group>
                </page>
                <page string="Additional Booking Information" name="additional_booking_info">
                    <group>
                        <field name="booking_confirmation_text"/>
                        <field name="booking_footer_text"/>
                        <field name="booking_email"/>
                        <field name="booking_cc"
                               placeholder='Provide cc emails separating with commas...'/>
                        <field name="payment_response_mail"
                               placeholder='Provide emails separating with commas...'/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>