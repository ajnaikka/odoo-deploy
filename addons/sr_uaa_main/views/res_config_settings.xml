<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_sale_order_validity" model="ir.ui.view">
        <field name="name">default.sale.order.validity.sale.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@id="sale_config_online_confirmation_sign"]' position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="sale_order_default_validity_hours" />
                        <div class="text-muted mt4 mb4">
                            By default, the validity hour of Quotation will be the date of the sale order plus 24 hours defined in this field.
            If the value of this field is 0, the Quotation will not have a validity hour by default.
                        </div>
                        <div class="text-muted mt4 mb4">
                            <field name="sale_order_default_validity_hours" />
                            <span
                                class="o_form_label"
                                style="margin-left: 5px;"
                            >Hours</span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_view_form_notification_mail" model="ir.ui.view">
        <field name="name">default.notification.mail.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@id="companies_setting"]' position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="notification_mail" />
                        <div class="text-muted mt4 mb4">
                            Passport Expiry notification will be gone to this mail.If Null, n mail will be sent
                        </div>
                        <div class="text-muted mt4 mb4">
                            <field name="notification_mail" widget="email"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
