<odoo>
    <data>
        <record id="view_travel_class_tree" model="ir.ui.view">
            <field name="name">travel.class.tree</field>
            <field name="model">travel.class</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_travel_class_form" model="ir.ui.view">
            <field name="name">travel.class.form</field>
            <field name="model">travel.class</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_travel_class_view" model="ir.actions.act_window">
            <field name="name">Class of Travel</field>
            <field name="res_model">travel.class</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
        </record>

    </data>
</odoo>