<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_simple_case" model="ir.ui.view">
        <field name="name">account.move.line.uaa</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="name"/>
                    <field name="product_id" string="Service Category" options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                    <field name="price_unit" string="Service Charge"/>
                    <field name="price_subtotal"/>
                </group>
            </form>
        </field>
    </record>


    <record id="invoice_tree_inherit_uaa" model="ir.ui.view">
        <field name="name">account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed_signed']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="invoice_form_inherit_uaa" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='partner_id']" position="after">
                <field name="traveler_name" readonly="0" force_save="1"/>
            </xpath>

             <xpath expr="//div[hasclass('o_td_label')][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='preview_invoice']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent']" position='attributes'>
                <attribute name="attrs">{'invisible': ['|', ('payment_state', '!=', 'paid'),
                    ('move_type', 'not in',
                    ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))
                    ]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent']" position='attributes'>
                <attribute name="groups">sr_uaa_main.view_send_print_invoice</attribute>
            </xpath>
            <xpath expr="//button[@name='action_reverse']" position='attributes'>
                <attribute name="groups">sr_uaa_main.view_add_credit_note_invoice</attribute>
            </xpath>

              <xpath expr="//form" position='attributes'>
                <attribute name="create">false</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_invoice_payment_transactions"
                        class="oe_stat_button"
                         width="200"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible':[('pay_trans_inv_no', '=', 0)]}"
                        type="object">
                    <field name="pay_trans_inv_no" widget="statinfo"
                           string="Payment Transactions"/>
                </button>
            </xpath>
            <xpath expr="//form" position="attributes">
                    <attribute name="craete">0</attribute>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Terms &amp; Conditions" name="terms_conditions_info_id">
                    <group>
                        <field name="terms_conditions" nolabel="1"/>
                    </group>
                </page>
                <page string="Cancellation Policy" name="cancellation_policy_info_id">
                    <group>
                        <field name="cancellation_policy" nolabel="1"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='product_id']" position="attributes">
                <attribute name="string">Service Category</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="service_type_id" options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                <field name="uaa_services_id" options="{'no_create':True,'no_create_edit':True, 'no_open': True}"/>
                <field name="enquiry_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Service Category</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
             <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="attributes">
                <attribute name="string">Service Charge</attribute>
            </xpath>
            <xpath expr="//button[@name='open_reconcile_view']" position="after">
                <button class="oe_stat_button" type="object" string="View Enquiry"
                        name="get_enquiry" icon="fa-external-link-square"
                        attrs="{'invisible': [('enquiry_id', '=', False)]}">
                </button>
            </xpath>


        </field>
    </record>
</odoo>
