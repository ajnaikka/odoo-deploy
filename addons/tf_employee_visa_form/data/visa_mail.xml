<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="visa_application_email_id" model="mail.template">
            <field name="name">Visa Application Template</field>
            <field name="model_id" ref="tf_employee_visa_form.model_employee_visa_form"/>
            <field name="subject">Visa Application for {{object.relation}}</field>
            <field name="email_from">{{ (object.related_emp_id.user_id.email_formatted) }}</field>
            <field name="email_to">{{ (object.related_emp_id.parent_id.user_partner_id.id)}}</field>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear <span t-esc="object.related_emp_id.parent_id.name"/>,
                        <br/>
                        <br/>

                        I trust this email finds you well. Please find attached my completed visa application for
                        purpose of travel.

                        <br/>Thank you for your assistance.<br/><br/>

                        Best regards,
                        <br/>
                        <span t-esc="object.related_emp_id.name"/>

                        <span t-if="object.related_emp_id.work_phone">
                            <span t-esc="object.related_emp_id.work_phone"/>
                        </span>
                        <span t-else="">
                            <span t-esc="object.related_emp_id.private_phone"/>
                        </span>

                    </p>
                </div>
                <div style="margin: 5px 0px 5px 0px;">
                    <a t-att-href="object.get_url()">
                        Link of record
                    </a>
                </div>


            </field>

        </record>

    </data>
</odoo>
