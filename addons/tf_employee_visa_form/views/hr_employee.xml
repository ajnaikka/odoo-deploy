<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_employee_inherit" model="ir.ui.view">
        <field name="name">hr.employee.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">

                <page name="visa_settings" string="Visa settings" invisible="is_true == False">
                    <button string="Visa Application" type="object" class="btn btn-secondary ms-4 mt-3"
                            name="action_visa_application_form" invisible="is_true == False"/>
                    <form>
                        <field name="is_true" invisible="1"/>


                        <field name="visa_app_ids">
                            <tree delete="0" create="0">
                                <field name="applicant_name"/>
                                <field name="relation"/>
                                <field name="emp_id"/>
                                <field name="inv_letter"/>
                                <field name="state"/>

                            </tree>


                        </field>

                    </form>

                </page>
            </xpath>
        </field>
    </record>

</odoo>
