<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="grading_structure_multi_company_rule" model="ir.rule">
        <field name="name">Grading structure multi company rule</field>
        <field ref="model_grading_structure" name="model_id" />
        <field eval="True" name="global" />
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id','in',company_ids)]
        </field>
    </record>

    <record id="group_hr_manager_user" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>
</odoo>
