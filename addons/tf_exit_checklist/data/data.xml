<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="release_checklist_email" model="mail.template">
            <field name="name">Release Checklist Template</field>
            <field name="model_id" ref="tf_exit_checklist.model_exit_form"/>
            <field name="subject">Release Checklist for {{object.employee_id.name}}</field>
            <field name="email_from" t-esc="object.env.user.email"/>
            <field name="email_to" t-esc="object.employee_id.parent_id.work_email"/>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear Sir,
                        <br/><br/>

                        i attached the link below.Verify the details, if it is correct approve it and also attach signed copy<br/>

                        Best regards,
                        <br/><br/>
                        <span t-esc="object.employee_id.parent_id.work_email"/>
                    </p>
                </div>
                <div style="margin: 5px 0px 5px 0px;">
                    <a t-att-href="object.get_url()">
                    Link of record</a>
                </div>


            </field>
            <field name="attachment_ids" eval="[(0, 0, {
                'name': 'Your_Report.pdf',
                'datas': base64.b64encode(object.render_pdf_report('your_module.your_report_template_id')),
                'res_model': 'mail.template',
                'res_id': object.id,
                })]"/>
        </record>

    </data>
</odoo>