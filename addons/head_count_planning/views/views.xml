<odoo>
    <data>
        <record id="head_count_planning_search" model="ir.ui.view">
            <field name="name">head.count.planning.search</field>
            <field name="model">head.count.planning</field>
            <field name="arch" type="xml">
                <search>
                    <field name="department_id"/>
                    <field name="year"/>
                </search>
            </field>
        </record>

        <record id="head_count_planning_tree" model="ir.ui.view">
            <field name="name">head.count.planning.tree</field>
            <field name="model">head.count.planning</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="year"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                           groups="base.group_multi_company"
                           optional="hide"
                           readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="head_count_planning_form" model="ir.ui.view">
            <field name="name">head.count.planning.form</field>
            <field name="model">head.count.planning</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">

                        </div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="department_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="company_id" options="{'no_create': True}"
                                       groups="base.group_multi_company"/>
                                <field name="company_id" invisible="1"/>

                            </group>
                            <group>
                                <field name="year" options="{'no_create': True}"/>
                                <field name="user_id" options="{'no_create': True}" invisible="1"/>

                            </group>
                        </group>
                        <group>
                            <field name="planning_line_ids" string="Details">
                                <form>
                                    <group>
                                        <group>
                                            <field name="job_position_id"/>
                                            <field name="existing_no_of_employees"/>
                                            <field name="no_of_vacancies"/>
                                            <field name="company_id"/>
                                        </group>
                                        <group>
                                            <field name="justification"/>
                                            <field name="status"/>
                                            <field name="Joining_month"/>
                                            <field name="user_id"/>
                                        </group>
                                    </group>

                                </form>
                                <tree editable="bottom">
                                    <field name="job_position_id"/>
                                    <field name="existing_no_of_employees"/>
                                    <field name="no_of_vacancies"/>
                                    <field name="justification"/>
                                    <field name="status"/>
                                    <field name="Joining_month"/>
                                    <field name="company_id" column_invisible="1"/>
                                </tree>

                            </field>
                        </group>
                        <group string="Developed by Department Manager" name="department_manager">
                            <group>
                                <field name="department_manager_signature" widget="image"/>
                                <field name="department_manager_signed_by"/>
                                <field name="department_manager_signed_on"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group string="Reviewed by HR Manager" name="hr_manager">
                            <group>
                                <field name="hr_signature" widget="image"/>
                                <field name="hr_signed_by"/>
                                <field name="hr_signed_on"/>

                            </group>
                            <group>
                            </group>
                        </group>

                        <group string="Approved by CEO" name="approved_by_ceo">
                            <group>
                                <field name="ceo_signature" widget="image"/>
                                <field name="ceo_signed_by"/>
                                <field name="ceo_signed_on"/>

                            </group>
                            <group>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="head_count_planning_action" model="ir.actions.act_window">
            <field name="name">Yearly Head Count Planning</field>
            <field name="res_model">head.count.planning</field>
        </record>

        <menuitem
                id="head_count_planning_menu"
                parent="hr.menu_hr_root"
                sequence="6"
                name="Yearly Head Count Planning"
                action="head_count_planning_action"
        />
    </data>
</odoo>
