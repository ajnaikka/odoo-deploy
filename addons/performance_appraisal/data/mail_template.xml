<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_template_appraisal_request" model="mail.template">
            <field name="name">Manager appraisal request</field>
            <field name="model_id" ref="performance_appraisal.model_performance_appraisal"/>
            <field name="email_from">{{ object.employee_id.work_email }}</field>
            <field name="email_to">{{ object.department_id.manager_id.work_email }}</field>
            <field name="subject">Appraisal Request</field>
            <field name="description">Sent manually to the manager by the employee who wants an appraisal</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear,
                        <br/>
                        An appraisal has been requested by
                        <t t-out="object.employee_id.name">Addison Olson</t>
                        <br/>
                        Please check.
                        <br/>
                        <div style="margin: 16px 0px 16px 0px; text-align: center;">
                            <a t-att-href="'/web#id=%s&amp;model=performance.appraisal&amp;view_type=form' % (object.id)" style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Appraisal</a>
                        </div>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_appraisal_request_confirmed" model="mail.template">
            <field name="name">Manager appraisal request confirmed</field>
            <field name="model_id" ref="performance_appraisal.model_performance_appraisal"/>
            <field name="email_from">{{ object.department_id.manager_id.work_email }}</field>
            <field name="email_to">{{ object.company_id.hr_manager_employee_id.work_email }}</field>
            <field name="subject">Appraisal Request</field>
            <field name="description">Sent manually to the HR manager by the department manager</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear,
                        <br/>
                        An appraisal requested by
                        <t t-out="object.employee_id.name">Addison Olson</t> has been confirmed.
                        <br/>
                        Please amend compensation package.
                        <br/>
                        <div style="margin: 16px 0px 16px 0px; text-align: center;">
                            <a t-att-href="'/web#id=%s&amp;model=performance.appraisal&amp;view_type=form' % (object.id)" style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">View Appraisal</a>
                        </div>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>

</odoo>
