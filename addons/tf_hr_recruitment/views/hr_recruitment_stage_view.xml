<odoo>
    <data>

        <record id="hr_recruitment_stage_contract_form_inherit" model="ir.ui.view">
            <field name="name">hr.recruitment.contract.stage.form</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fold']" position="after">
                    <field name="contract_signed_stage"/>
                    <field name="contract_issued_stage"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>