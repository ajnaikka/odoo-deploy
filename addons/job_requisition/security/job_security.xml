<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="job_requisition_multi_company_rule" model="ir.rule">
        <field name="name">Job requisition multi company rule</field>
        <field ref="model_job_requisition" name="model_id" />
        <field eval="True" name="global" />
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id','in',company_ids)]
        </field>
    </record>

    <record id="job_description_multi_company_rule" model="ir.rule">
        <field name="name">Job description multi company rule</field>
        <field ref="model_job_description" name="model_id" />
        <field eval="True" name="global" />
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id','in',company_ids)]
        </field>
    </record>

</odoo>
