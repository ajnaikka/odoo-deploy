<odoo>
    <data>
        <record id="job_description_search" model="ir.ui.view">
            <field name="name">job.description.search</field>
            <field name="model">job.description</field>
            <field name="arch" type="xml">
                <search>
                    <field name="department_id"/>
                    <field name="requestor_id"/>
                    <field name="job_requisition_id"/>
                </search>
            </field>
        </record>

        <record id="job_description_tree" model="ir.ui.view">
            <field name="name">job.description.tree</field>
            <field name="model">job.description</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="job_requisition_id"/>
                    <field name="job_position_id"/>
                    <field name="department_id"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                       groups="base.group_multi_company"
                       optional="hide"
                       readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="job_description_form" model="ir.ui.view">
            <field name="name">job.description.form</field>
            <field name="model">job.description</field>
            <field name="arch" type="xml">
                <form>
                    <header>
<!--                        <field name="state" widget="statusbar" statusbar_visible="draft,manager_approval,manager_approved,hr_approval,hr_approved,job_description_created,processed"/>-->
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">

                        </div>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <field name="job_requisition_id" options="{'no_create': True}" placeholder="Job Requisition"/>
                            <group>
                                <field name="department_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="job_code"/>
                                <field name="reports_to" options="{'no_create': True}"/>
                                <field name="title"/>
                                <field name="requestor_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="job_position_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="grade_structure_id" options="{'no_create': True, 'no_open':True}"/>
                                <field name="reports_in"/>
                                <field name="type_of_position"/>
                                <field name="other_position" invisible="type_of_position != 'other'"/>
                                <field name="user_id" options="{'no_create': True}" invisible="1"/>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <group name="position_summary" string="Position Summary">
                            <field name="position_summary" colspan="2" nolabel="1" placeholder="Position summary..."/>
                        </group>
                        <group name="major_responsibilities" string="Major Responsibilities">
                            <field name="major_responsibilities" colspan="2" nolabel="1" placeholder="Major Responsibilities..."/>
                        </group>
                        <group name="other_responsibilities" string="Other Responsibilities">
                            <field name="other_responsibilities" colspan="2" nolabel="1" placeholder="Other Responsibilities..."/>
                        </group>
                        <group name="other_details" string="Qualifications, Experience and Competencies">
                            <field name="other_details" colspan="2" nolabel="1" placeholder="Qualifications, Experience and Competencies..."/>
                        </group>
                        <group>
                            <group>
                                <field name="reviewed_by" options="{'no_create': True}"/>
                                <field name="reviewed_title"/>
                                <field name="date_posted"/>
                            </group>
                            <group>
                                <field name="approved_by" options="{'no_create': True}"/>
                                <field name="approved_title"/>
                                <field name="date_hired"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="job_description_action" model="ir.actions.act_window">
            <field name="name">Job Description</field>
            <field name="res_model">job.description</field>
        </record>

        <menuitem
                id="job_description_menu"
                parent="menu_hr_job_requisition_main"
                sequence="2"
                name="Job Description Form"
                action="job_description_action"
        />
    </data>
</odoo>
