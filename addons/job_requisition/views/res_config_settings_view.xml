<odoo>
    <data>

        <record id="hr_manager_res_config_settings_form" model="ir.ui.view">
            <field name="name">hr.manager.res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='employee_rights_setting_container']" position="after">
                    <block title="HR Manager" id="hr_manager">
                         <div class="content-group">
                                <div class="row mt16">
                                    <label string="HR Manager(Employee)" for="hr_manager_employee_id" class="col-lg-3 o_light_label"/>
                                    <field name="hr_manager_employee_id" class="w-25"
                                           domain="[('company_id', '=', company_id)]" options="{'no_create': True}"/>
                                </div>
                         </div>
                    </block>
                </xpath>
            </field>
        </record>

    </data>
</odoo>