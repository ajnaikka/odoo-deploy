        <record id="interview_evaluvations_tree" model="ir.ui.view">
            <field name="name">interview.evaluvations.tree</field>
            <field name="model">interview.evaluvations</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="candidate_name"/>
                    <field name="Position"/>
                </tree>
            </field>
        </record>

        <record id="interview_evaluvations_form" model="ir.ui.view">
            <field name="name">interview.evaluvations.form</field>
            <field name="model">interview.evaluvations</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Interview Evaluation Form">
                            <field name="candidate_name"/>
                            <field name="Position"/>
                        </group>
                        <notebook>
                            <page string="Interview Details" id="interview_details">
                                <field name="line_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="comment" widget="text"/>
                                        <field name="comment1" widget="text"/>
                                        <field name="high_rate" col="1"/>
                                        <field name="meadium_rate" col="1"/>
                                        <field name="low_rate" col="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="interview_evaluvations_action" model="ir.actions.act_window">
            <field name="name">Interview Evaluvation</field>
            <field name="res_model">interview.evaluvations</field>
        </record>
        <menuitem
                id="interview_evaluvation_menu"
                parent="hr_recruitment.report_hr_recruitment"
                sequence="23"
                name="Intrview Evaluation Form"
                action="interview_evaluvations_action"
        />

        <record model="ir.ui.view" id="hr_applicant_form_inherited_view">
            <field name="name">hr.applicant.form.inherited</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_makeMeeting']" position="after">
                    <button
                            name="smart_evaluation"
                            class="oe_stat_button"
                            icon="fa-bars"
                            type="object"
                            string="Interview Evaluation Forms"
                            invisible="interview_evaluation_form_count == 0"
                    />

                </xpath>
                <xpath expr="//button[@name='archive_applicant']" position="after">
                    <button name="evaluation" type="object" string=" Create Interview Evaluation Form"
                            invisible="not interview_stage"/>
                </xpath>
                <field name="type_id" position="after">
                    <field name="interview_stage" invisible="1"/>
                    <field name="interview_evaluation_form_count" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
