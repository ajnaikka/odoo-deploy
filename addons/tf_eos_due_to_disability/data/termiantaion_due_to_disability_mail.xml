<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_termination_due_to_disability_email" model="mail.template">
            <field name="name">Employee Disability Termination Template</field>
            <field name="model_id" ref="tf_eos_due_to_disability.model_employee_disability_termination"/>
            <field name="subject">Termination form for {{(object.related_dis_id.name)}}</field>
            <field name="email_from">{{object.email_from}}</field>
            <field name="email_to">{{object.email_to.email}}</field>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear Sir,
                        <br/>
                        <br/>

                        I regret to inform you that, due to disability issues of employee, we must terminate your employment
                        with [Company Name], effective [Termination Date]. We appreciate your contributions and will
                        assist you during this transition.

                        <br/>Thank you for your assistance.
                        <br/>
                        <br/>

                        Best regards,
                        <br/>
                        <span t-esc="object.related_dis_id.name"/>
                    </p>
                </div>
            </field>
        </record>

    </data>
</odoo>
